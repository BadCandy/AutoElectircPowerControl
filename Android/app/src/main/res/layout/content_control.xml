<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_control"
    tools:context="org.androidtown.ictttapplication.controlActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구간1"
                android:id="@+id/section1"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:layout_weight="1"
                android:gravity="center" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="80dp"
                    android:id="@+id/turnon1"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/onbutton"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="80dp"
                    android:id="@+id/turnoff1"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/offbutton"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ON"
                        android:id="@+id/onbutton1"
                        android:background="@android:color/transparent"
                        android:textSize="30dp"
                        android:textColor="#000000" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="OFF"
                        android:id="@+id/offbutton1"
                        android:background="@android:color/transparent"
                        android:textSize="30dp"
                        android:textColor="#000000"
                        android:layout_marginLeft="50dp" />
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구간2"
                android:id="@+id/section2"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:layout_weight="1"
                android:gravity="center" />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:id="@+id/turnon2"
                android:background="@android:color/transparent"
                android:src="@mipmap/onbutton"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:layout_weight="1" />

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="80dp"
                    android:id="@+id/turnoff2"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/offbutton"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:layout_weight="1" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ON"
                        android:id="@+id/onbutton2"
                        android:background="@android:color/transparent"
                        android:textSize="30dp"
                        android:textColor="#000000" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="OFF"
                        android:id="@+id/offbutton2"
                        android:background="@android:color/transparent"
                        android:textSize="30dp"
                        android:textColor="#000000"
                        android:layout_marginLeft="50dp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구간3"
                android:id="@+id/section3"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:layout_weight="1"
                android:gravity="center" />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:id="@+id/turnon3"
                android:background="@android:color/transparent"
                android:src="@mipmap/onbutton"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:layout_weight="1" />

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="80dp"
                    android:id="@+id/turnoff3"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/offbutton"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:layout_weight="1" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ON"
                        android:id="@+id/onbutton3"
                        android:background="@android:color/transparent"
                        android:textSize="30dp"
                        android:textColor="#000000" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="OFF"
                        android:id="@+id/offbutton3"
                        android:background="@android:color/transparent"
                        android:textSize="30dp"
                        android:textColor="#000000"
                        android:layout_marginLeft="50dp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비콘에서 멀어질 경우 작업"
            android:id="@+id/textView2"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="31dp"
            android:textStyle = "bold"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:checked="false"
            android:text="구간1"
            android:textSize="20dp"
            android:enabled="true" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구간2"
            android:id="@+id/switch2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:checked="false"
            android:textSize="20dp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구간3"
            android:id="@+id/switch3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:checked="false"
            android:textSize="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:id="@+id/button"
            android:layout_gravity="right" />

    </LinearLayout>
</FrameLayout>
